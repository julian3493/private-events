<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
      <div class = 'notification is-success global-notification'>
        <p class = 'notice'><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert]%>
      <div class = 'notification is-danger global-notification'>
        <p class = 'alert'><%= alert %></p>
      </div>
    <% end %>
    
    <p class="control">
      <%= link_to 'Private Events', root_path, class: 'is-capitalized title is-3' %>
    </p>
    <% if sign_in? %> 
      <p class="control">
        Welcome <%= link_to current_user.name, current_user %>
      </p>
      <p class="control">
        <%= link_to 'Log Out', session_path(session[:name]), method: :delete, class: "button is-primary" %>
      </p>
    <% else %>
      <p class="control">
        <%= link_to 'Sign In', new_session_path, class: "button is-primary" %>
      </p>
      <p class="control">
        <%= link_to 'Sign Up', new_user_path, class: "button is-primary" %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
